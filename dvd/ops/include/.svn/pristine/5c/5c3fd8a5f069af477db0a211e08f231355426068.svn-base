
/* video */
.video_player {
  position: absolute;
  left: 0;
  top: -52px;
  width: 1280px;
  height: 720px;
}
.video_player.isPaused .vplay.off {
  pointer-events: auto;
}
.video_player.isPaused .vplay.off:hover {
  opacity: 0.5;
}
.video{
  position: absolute;
  left: 0;
  top: 0;
  width: 1280px;
  height: 720px;
}
video{
  width: 100%;
  height: 100%;
}
.vplay{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 204px;
  height: 203px;
  background: url(../images/mediaImg/vPlayer_main_play.png) no-repeat center top/204px;
  transform: translate(-50%, -50%);
  cursor: pointer;
}
.vplay.ON {
  background: url(../images/mediaImg/vPlayer_main_play.png) no-repeat center bottom/204px;
}
.vplay.off {
  opacity: 0;
  pointer-events: none;
}
.video_ctr{
  position: absolute;
  left: 0;
  bottom: 15px;
  width: 1280px;
  height: 50px;
}
.playbar{
  position: absolute;
  /* left: 314px; */
  left: calc(50% - (823px / 2));
  top: 0px;
  /* width: 673px; */
  width: 803px; /* add soundProgress */
  height: 56px;
  border-radius: 30px;
  background: rgba(0,0,0,.7);
}
.playbar.hide {
  animation: hidePlayer .3s ease-in-out forwards;
}
@keyframes hidePlayer {
  99% {opacity: 0; transform: translateY(100px); }
  100% {opacity: 0; }
}

.playbar > div.play_time {
  top: 15px;
}
.playbar > div{
  top: 11px;
}
.video_ctr .play,
.video_ctr .pause,
.video_ctr .stop {
  position: absolute;
  width: 35px;
  height: 35px;
  background: no-repeat center top/100%;
}
.video_ctr .play {
  left: 20px;
  background-image: url(../images/mediaImg/vPlayer_btn_play.png);
}
.video_ctr .play.ON,
.video_ctr .pause.ON,
.video_ctr .stop.ON {
  background-position-y: bottom;
}
.video_ctr .pause {
  left: 20px;
  background-image: url(../images/mediaImg/vPlayer_btn_pause.png);
}
.video_ctr .stop {
  left: 55px;
  background-image: url(../images/mediaImg/vPlayer_btn_stop.png);
}
.video_ctr .playdot {
  position: absolute;
  top: 18px;
  left: 99px;
  width: 20px;
  height: 20px;
  background-color: #ff6666;
  border-radius: 100%;
}


/*stop playbar 간격 20px */
.video_ctr #progress_bg{
  position: absolute;
  top: 25px;
  left: 99px;
  width: 353px;
  height: 6px;
  background-color: #fff;
  cursor: default;
}
.video_ctr #progress_bg:before {
  content: '';
  position: absolute;
  top: -10px;
  left: 0;
  right: 0;
  bottom: -10px;
}
.video_ctr .progressvol_bar{
  position: absolute;
  top: 25px;
  left: 99px;
  width: 0px;
  height: 6px;
  background-color: #ff6666;
  pointer-events: none;
}
.video_ctr #progress_bg2{
  display: none;
  position: absolute;
  bottom: 40px;
  right: 364px;
  width: 6px;
  height: 60px;
  border: solid 1px #999;
  background-color: #fff;
  cursor: default;
}
.progressvol_bar2{
  display: none;
  position: absolute;
  bottom: 40px;
  right: 364px;
  width: 6px;
  height: 60px;
  background-color: #ff6666;
  pointer-events: none;
}
.video_ctr .sound {
  position: absolute;
  /* right: 56px; */
  right: 186px; /* add soundProgress */
  top: 11px;
  width: 35px;
  height: 35px;
  background: url(../images/mediaImg/vPlayer_vol_icon.png) no-repeat center top/100%;
}
.video_ctr .sound.muted {
  background-image: url(../images/mediaImg/vPlayer_vol_mute.png);
}
.video_ctr .sound.ON {
  background-position-y: bottom;
}
.video_ctr .size_icon {
  position: absolute;
  right: 20px;
  top: 9px;
  width: 35px;
  height: 35px;
  background: url(../images/mediaImg/vPlayer_size_icon.png) no-repeat center top/100%;
}
.video_ctr .size_icon.ON {
  background-position-y: bottom;
}

.video_ctr .soundProgress_bg{
  position: absolute;
  top: 25px;
  left: 625px;
  width: 116px;
  height: 6px;
  background-color: #fff;
  cursor: default;
}
.video_ctr .soundProgress_bar{
  position: absolute;
  top: 25px;
  left: 625px;
  width: 0px;
  height: 6px;
  background-color: #ff6666;
  pointer-events: none;
}
.video_ctr .soundProgress_handler {
  position: absolute;
  top: 18px;
  left: 624px;
  width: 20px;
  height: 20px;
  background-color: #ff6666;
  border-radius: 100%;
}

.play_time{
  position: absolute;
  left: 466px;
  width: 120px;
  color: #fff;
  font-size: 18px;
  border: none;
  background-color: transparent;
  user-select: none;
  -ms-user-select: none;
  -moz-user-select: none;
  -webkit-user-select: none;
  pointer-events: none;
}
.video_ctr input{
  display: inline-block;
  width: 50px;
  color: #fff;
  font-size: 18px;
  border: none;
  background-color: transparent;
}
.playbar div {
  cursor: pointer;
}